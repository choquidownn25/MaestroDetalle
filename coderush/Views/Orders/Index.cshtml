@using Microsoft.AspNetCore.Mvc.Localization
@model CapaConexion.Models.Orders
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Orden de Compra";
    ViewData["Cliente"] = "Orden de Compra";
    ViewData["EntityIcon"] = "fa fa-file-text";
    ViewData["Almacen"] = "fa fa-file-text";
}
<!-- Content Wrapper. Contains page content -->
<!-- Content Wrapper. Contains page content -->
<form asp-action="View">
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">
            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title text-primary"><i class="fa fa-gear"></i> @ViewData["Title"]</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                                title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    @*<div id="Grid"></div>*@
                    <div class="row">
                        <div class="col-md-12">
                            <div class="text-danger"></div>
                            <input type="hidden" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label"></label>
                                        <input class="form-control" />
                                     
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="CustomerId" class="control-label"></label>
                                        <select asp-for="CustomerId" class="form-control select2" asp-items="ViewBag.CustomerId"></select>
                                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">

                                <label asp-for="OrderDate" class="control-label"></label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input id="txtSelectedDate" asp-for="OrderDate" class="form-control pull-right datepicker" type="text" value="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" />
                                </div>
                                <span asp-validation-for="OrderDate" class="text-danger"></span>

                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="RequiredDate" class="control-label"></label>

                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>

                                            <input asp-for="RequiredDate" id="datepicker" type="text" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" />
                                        </div>
                                        <span asp-validation-for="RequiredDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ShippedDate" class="control-label"></label>

                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input id="ShippedDate" asp-for="ShippedDate" value="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" class="form-control pull-right datepicker" type="text" />
                                        </div>
                                        <span asp-validation-for="RequiredDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="StoreId" class="control-label"></label>
                                        <select asp-for="StoreId" class="form-control select2" asp-items="ViewBag.StoreId"></select>
                                        <span asp-validation-for="StoreId" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="StaffId" class="control-label"></label>
                                        <select asp-for="StaffId" class="form-control select2" asp-items="ViewBag.StaffId"></select>
                                        <span asp-validation-for="StaffId" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">

                </div>
                <!-- /.box-footer-->
            </div>
            <!-- /.box -->
        </section>
        <!-- /.content -->



    </div>
    <!-- /.content-wrapper -->
    <!-- /.content-wrapper -->
</form>

<script>
   
</script>
<script src="~/scripts/OrderItems/Index.js" type="text/javascript"></script>
<script src="~/scripts/Fecha/Date.js" type="text/javascript"></script>
